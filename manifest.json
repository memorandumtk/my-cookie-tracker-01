{
  "manifest_version": 3,
  "name": "Cookie Tracker",
  "description": "Tracks user cookie preferences across websites",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "cookies"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
